---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('writing');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await render(post);
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  currentPage="writing"
>
  <article class="post">
    <header class="post-header animate-in">
      <time datetime={post.data.pubDate.toISOString()}>
        {post.data.pubDate.toLocaleDateString('en-AU', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
      <h1>{post.data.title}</h1>
    </header>

    <div class="post-content prose animate-in-delay-1">
      <Content />
    </div>

    <footer class="post-footer animate-in-delay-2">
      <a href="/writing" class="back-link">← Back to Writing</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post-header {
    margin-bottom: var(--space-xl);
  }

  .post-header time {
    font-family: var(--font-sans);
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    display: block;
    margin-bottom: var(--space-sm);
  }

  .post-header h1 {
    font-family: var(--font-sans);
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .post-content {
    margin-bottom: var(--space-xl);
  }

  /* Drop cap for the first paragraph */
  .post-content :global(p:first-of-type::first-letter) {
    float: left;
    font-family: var(--font-serif);
    font-size: 3.5rem;
    line-height: 0.8;
    font-weight: 400;
    margin-right: 0.1em;
    margin-top: 0.1em;
    color: var(--color-text);
  }

  .post-content :global(h2) {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-lg);
    color: var(--color-text);
  }

  .post-content :global(h3) {
    font-family: var(--font-sans);
    font-size: 1.1875rem;
    font-weight: 500;
    letter-spacing: -0.01em;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    color: var(--color-text);
  }

  .post-content :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-md);
    margin: var(--space-lg) 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  /* Horizontal rules — faded line with generous breathing room */
  .post-content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      var(--color-border) 20%,
      var(--color-border) 80%,
      transparent
    );
    margin: var(--space-2xl) auto;
    max-width: 200px;
  }

  .post-content :global(pre) {
    background-color: var(--color-bg-alt);
    padding: var(--space-md);
    border-radius: 4px;
    overflow-x: auto;
    font-size: 0.875rem;
  }

  .post-content :global(code) {
    font-family: 'SF Mono', Monaco, 'Andale Mono', monospace;
    font-size: 0.875em;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: var(--space-md) 0;
    padding-left: var(--space-lg);
  }

  .post-content :global(li) {
    margin-bottom: var(--space-xs);
  }

  /* Article images */
  .post-content :global(img) {
    display: block;
    max-width: 100%;
    height: auto;
    margin: var(--space-2xl) auto;
    border-radius: 2px;
  }

  .post-content :global(figure) {
    margin: var(--space-2xl) 0;
    text-align: center;
  }

  .post-content :global(figure img) {
    margin: 0 auto;
  }

  .post-content :global(figure figcaption) {
    font-family: var(--font-sans);
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    margin-top: var(--space-xs);
    font-style: italic;
  }

  .post-footer {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    font-family: var(--font-sans);
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  @media (max-width: 640px) {
    .post-header h1 {
      font-size: 1.75rem;
    }
  }
</style>
